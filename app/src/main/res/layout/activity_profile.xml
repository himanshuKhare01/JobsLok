<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Activity.ProfileActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/colorBackgroud"
                android:fitsSystemWindows="true"
                android:gravity="center"
                app:layout_collapseMode="parallax"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/question_imageview"
                    android:layout_width="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/coffepic"
                    android:layout_height="100dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Himanshu Khare"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="My Address"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/membership"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="Membership since May 29,2019"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:background="@drawable/scrim" />
    </com.google.android.material.appbar.AppBarLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/edit_profile"
        app:backgroundTint="@color/colorAccent"
        app:fabSize="normal"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_mode_edit_black_24dp"
        tools:ignore="RelativeOverlap" />

    <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_below="@id/appbar"
       android:layout_height="wrap_content">

       <TextView
           android:layout_width="match_parent"
           android:text="About"
           android:padding="10dp"
           android:textColor="@android:color/black"
           android:textSize="16sp"
           android:layout_height="wrap_content"/>
       <TextView
           android:layout_width="match_parent"
           android:text="Professional Android Developer"
           android:textColor="@android:color/secondary_text_light"
           android:textSize="14sp"
           android:layout_marginTop="10dp"
           android:layout_marginStart="20dp"
           android:layout_height="wrap_content"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginTop="20dp"
           android:background="@android:color/darker_gray"
           />
       <TextView
           android:layout_width="match_parent"
           android:text="Portfolio"
           android:textColor="@android:color/black"
           android:textSize="16sp"
           android:padding="10dp"
           android:layout_height="wrap_content"/>


        <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginTop="20dp"
           android:background="@android:color/darker_gray"
           />
       <TextView
           android:layout_width="match_parent"
           android:text="Badges"
           android:textColor="@android:color/black"
           android:textSize="16sp"
           android:padding="10dp"
           android:layout_height="wrap_content"/>
       <TextView
           android:layout_width="match_parent"
           android:text="Payment Method"
           android:textColor="@android:color/secondary_text_light"
           android:textSize="16sp"
           android:layout_marginTop="10dp"
           android:layout_marginStart="20dp"
           android:drawableStart="@drawable/ic_credit_card"
           android:drawablePadding="5dp"
           android:layout_height="wrap_content"/>
       <Button
           android:layout_width="match_parent"
           android:layout_gravity="center"
           android:layout_marginTop="20dp"
           android:layout_marginStart="50dp"
           android:layout_marginEnd="50dp"
           android:text="Learn More"
           android:background="@drawable/background_reviewall"
           android:layout_height="wrap_content"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginTop="20dp"
           android:background="@android:color/darker_gray"
           />

       <TextView
           android:layout_width="match_parent"
           android:text="Education"
           android:textColor="@android:color/black"
           android:textSize="16sp"
           android:padding="10dp"
           android:layout_height="wrap_content"/>

       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginTop="20dp"
           android:background="@android:color/darker_gray"
           />
       <TextView
           android:layout_width="match_parent"
           android:text="Specialities"
           android:textColor="@android:color/black"
           android:textSize="16sp"
           android:padding="10dp"
           android:layout_height="wrap_content"/>

       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginTop="20dp"
           android:background="@android:color/darker_gray"
           />
       <TextView
           android:layout_width="match_parent"
           android:text="Language"
           android:textColor="@android:color/black"
           android:textSize="16sp"
           android:padding="10dp"
           android:layout_height="wrap_content"/>

       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginTop="20dp"
           android:background="@android:color/darker_gray"
           />
       <TextView
           android:layout_width="match_parent"
           android:text="Work"
           android:padding="10dp"
           android:textColor="@android:color/black"
           android:textSize="16sp"
           android:layout_height="wrap_content"/>

       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginTop="20dp"
           android:background="@android:color/darker_gray"
           />
       <TextView
           android:layout_width="match_parent"
           android:text="Transportation"
           android:textColor="@android:color/black"
           android:textSize="16sp"
           android:padding="10dp"
           android:layout_height="wrap_content"/>

       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

   </LinearLayout>
</RelativeLayout>
</ScrollView>
