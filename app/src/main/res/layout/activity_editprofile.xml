<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EditProfileActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/editprofile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBackgroud"
        app:title="Edit Profile"
        app:titleTextColor="@color/colorWhite"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/editprofile_toolbar"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="General Information"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/secondary_text_light"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"/>
    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:mtf_hasFocus="true"
        app:mtf_openKeyboardOnFocus="false"
        app:mtf_labelColor="#666">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:text="Himansuh Khare"
            android:textStyle="bold"
            android:textColor="#333"
            android:textSize="15sp" />
    </com.github.florent37.materialtextfield.MaterialTextField>


        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:mtf_labelColor="#666">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:text="C208 Nandgram GZB"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:mtf_labelColor="#666">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tagline"
                android:text="I am Awesome"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:mtf_labelColor="#666">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="About Me"
                android:text="I'm android developer"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:mtf_labelColor="#666">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:text="himanshukhare440@gmail.com"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>


        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:mtf_labelColor="#666">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Birth Date"
                android:text="11-Sep-1996"
                android:textStyle="bold"
                android:inputType="none"
                android:textColor="#333"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <TextView
            android:layout_width="wrap_content"
            android:text="Portfolio"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/secondary_text_light"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="100dp"
                android:background="@drawable/bg_portfolio"
                android:padding="10dp"
                android:text="+"
                android:gravity="center"
                android:textColor="@color/colorBackgroud"
                android:textSize="31sp"
                android:layout_height="100dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="Skills"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/secondary_text_light"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"/>
        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:mtf_labelColor="#666">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Transportation"
                android:text="Car,Bike"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:mtf_labelColor="#666">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Education"
                android:text="Bsc"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:mtf_labelColor="#666">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Work In"
                android:text="Home"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            app:mtf_labelColor="#666">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Specialities"
                android:text="Android"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>